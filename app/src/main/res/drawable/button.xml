<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorPrimaryDark" />
            <padding
                android:left="4dp"
                android:top="1dp"
                android:right="4dp"
                android:bottom="1dp" />
      
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorPrimary" />
            <padding
                android:left="4dp"
                android:top="1dp"
                android:right="4dp"
                android:bottom="1dp" />
        </shape>
        
    </item>
</selector>